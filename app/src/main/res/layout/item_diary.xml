<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:layout_width="96dp"
        android:id="@+id/circle_image_item_diary"
        android:src="@drawable/img_item_journy_demo_"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/color_white"
        android:layout_height="96dp" />
    <RelativeLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/circle_image_item_diary"
        android:layout_width="match_parent"
        android:background="@drawable/shape_background_edt_activity_add_journy"
        android:layout_height="match_parent">
        <Button
            android:background="@drawable/selector_btn_item_diary_edit"
            android:id="@+id/btn_item_diary_edit"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_above="@+id/ivbtn_item_diary_open_expand"
            android:text="12/02/2016"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_item_diary_time"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:text="text text text text text text text text text text text text"
            android:id="@+id/txt_item_diary_description"
            android:layout_width="match_parent"
            android:layout_above="@id/txt_item_diary_time"
            android:layout_height="match_parent" />
        <ImageButton
            android:id="@+id/ivbtn_item_diary_open_expand"
            android:src="@drawable/ic_item_diary_open_expand"
            android:scaleType="center"
            android:layout_width="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="30dp" />
        <ImageButton
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="50dp"
            android:id="@+id/ivbtn_item_diary_pencil"
            android:src="@drawable/ic_item_diary_pencil_box"
            android:layout_width="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="30dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_above="@id/ivbtn_item_diary_open_expand"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/txt_item_diary_time"
            android:layout_height="2dp"/>

    </RelativeLayout>
</RelativeLayout>