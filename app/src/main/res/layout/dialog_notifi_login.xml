<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_dialog_message"
        android:layout_margin="24dp"
        android:textSize="25sp"
        android:text="Bạn chưa đăng nhập"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/txt_dialog_login"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/txt_dialog_message"
        android:text="Đăng nhập"
        android:layout_toLeftOf="@+id/txt_dialog_register"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorAccent"
        android:id="@+id/txt_dialog_register"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/txt_dialog_message"
        android:text="Đăng ký"
        android:layout_height="wrap_content" />
</RelativeLayout>