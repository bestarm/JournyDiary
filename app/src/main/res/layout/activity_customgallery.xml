<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:layout_below="@+id/txt_customgallery_activity_title"
        android:id="@+id/gridview_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:background="@color/color_backgound_gridview_gallery">

    </GridView>
    <TextView
        android:id="@+id/txt_customgallery_activity_title"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:text="Chọn ảnh"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_activity_customgallery_img_selected"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:text="abc"
        android:background="@color/color_white"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_height="50dp" />

</RelativeLayout>