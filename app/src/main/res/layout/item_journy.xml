<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="200dp"
    >

    <ImageView
        android:id="@+id/iv_item_journy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_item_journy_image"
        android:src="@drawable/img_item_journy_demo_" />

    <TextView
        android:id="@+id/txt_item_journy_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/color_white"
        android:background="@drawable/shape_background_item_journy_name"
        android:text="23/4/2015"
        android:textSize="25sp" />

    <RelativeLayout
        android:background="@color/item_journy_color_background_text_time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_item_journy_follower"
            android:layout_width="25dp"
            android:src="@drawable/ic_item_journy_heart_selected"
            android:layout_height="25dp" />
        <TextView
            android:layout_toRightOf="@+id/iv_item_journy_follower"
            android:id="@+id/txt_item_journy_total_follow"
            android:text="Follower (12)"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/iv_item_journy_comment"
            android:layout_toLeftOf="@+id/txt_item_journy_total_comment"
            android:src="@drawable/ic_item_journy_comment"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/txt_item_journy_total_comment"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_alignParentRight="true"
            android:text="Comment (32)"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:elevation="2dp"
        android:text="sdfsd"
        android:fontFamily="casual"
        android:background="@drawable/shape_background_item_journy_name"
        android:textColor="@color/color_white"
        android:id="@+id/txt_item_journy_name"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
</RelativeLayout>